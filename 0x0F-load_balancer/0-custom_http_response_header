#!/usr/bin/env bash
# Install nginx and configure custom HTTP response header

var=$(hostname)
new_string="add_header X-Served-By $var;"

# Update Nginx to include the custom header
sudo apt-get update -y
sudo apt-get install nginx -y

# Create a custom Nginx configuration file
echo "server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;
    root /var/www/html;
    index index.html;

    location / {
        try_files \$uri \$uri/ =404;
        $new_string
    }

    error_page 404 /custom_404.html;
    location = /custom_404.html {
        root /var/www/html;
    }
}" | sudo tee /etc/nginx/sites-available/custom_config

# Create a symbolic link to enable the new site
sudo ln -s /etc/nginx/sites-available/custom_config /etc/nginx/sites-enabled/

# Remove the default symbolic link
sudo rm -f /etc/nginx/sites-enabled/default

# Test Nginx configuration
sudo nginx -t

# Reload Nginx to apply changes
if [ $? -eq 0 ]; then
    sudo systemctl reload nginx
    echo "Nginx configuration reloaded successfully."
else
    echo "Nginx configuration test failed. Please check your configuration."
fi

# Create a custom index.html for testing
echo 'This is web-02' | sudo tee /var/www/html/index.html

# Create a custom 404.html
echo 'This is a custom 404 page' | sudo tee /var/www/html/custom_404.html

# Restart Nginx to apply the custom 404 page
sudo systemctl restart nginx
