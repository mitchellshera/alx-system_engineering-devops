#!/usr/bin/env bash
# Install HAProxy

sudo apt-get -y install software-properties-common
sudo add-apt-repository -y ppa:vbernat/haproxy-2.5
sudo apt-get -y update

# Install HAProxy
sudo apt-get -y install haproxy
sudo sed -i -e '$aENABLED=1\n' /etc/default/haproxy
sudo sed -i -e '$a\listen http-in\n\tbind :80\n\tbalance roundrobin\n\tserver 259884-web-01 54.175.198.8:80 check\n\tserver 259884-web-02 52.86.56.129:80 check\n' /etc/haproxy/haproxy.cfg
sudo service haproxy restart
