#!/usr/bin/env bash
# Install HAProxy

# Update the system
sudo apt-get update -y

# Install HAProxy
sudo apt-get install haproxy -y

# Configure HAProxy to send traffic to web-01 and web-02 using roundrobin algorithm
echo "frontend http-in
  bind *:80
  default_backend servers

backend servers
  balance roundrobin
  server web-01 259884-web-01:80 check
  server web-02 259884-web-02:80 check" | sudo tee /etc/haproxy/haproxy.cfg

# Ensure HAProxy can be managed via an init script
sudo systemctl enable haproxy

# Restart HAProxy to apply the configuration
sudo systemctl restart haproxy